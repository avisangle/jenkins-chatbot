# AI Agent Service Environment Configuration
# Copy this to .env and update with your values

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Security
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-key
ALLOWED_ORIGINS=["http://localhost:8080", "http://your-jenkins-server:8080"]

# Google Gemini AI Configuration
GEMINI_API_KEY=your-google-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_MAX_TOKENS=4000
GEMINI_TEMPERATURE=0.7

# MCP Server Integration
MCP_SERVER_URL=http://localhost:8010
MCP_SERVER_AUTH=your-mcp-server-auth-token
MCP_SERVER_TIMEOUT=30

# Jenkins Integration
JENKINS_URL=http://localhost:8080
JENKINS_WEBHOOK_SECRET=your-webhook-secret
JENKINS_API_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SESSION_TTL=3600
REDIS_CONVERSATION_TTL=86400

# PostgreSQL Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/jenkins_ai_agent
DATABASE_POOL_SIZE=10
DATABASE_POOL_MAX_OVERFLOW=20

# Session Management
CHAT_SESSION_TIMEOUT=900
MAX_CONVERSATION_LENGTH=50
USER_TOKEN_EXPIRY=900

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Audit and Security
AUDIT_LOG_RETENTION_DAYS=90
ENABLE_REQUEST_LOGGING=true
ENABLE_SECURITY_EVENTS=true

# Performance
MAX_CONCURRENT_REQUESTS=100
AI_REQUEST_TIMEOUT=30
CACHE_TTL_SECONDS=300

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090